<nav class="navbar-header navbar navbar-expand-lg">
    <div class="container d-block px-0">
        <div class="position-relative">
            <div class="navbar-header-right pe-3">
                
                <div class="d-inline-block ml-1">
                    {% if app.request.attributes.get('_route') not in ['search'] %}
                        <div>
                            <form class="d-block" action="{{ pathLocalized('search_results') }}" method="get" id="formSearch">
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control border-secondary header-search" placeholder="{{ 'Search' | trans }}..." name="query">
                                    <button type="submit" class="btn btn-secondary bg-white text-black-50">
                                        <i class="icon-search"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                    {% endif %}
                </div>
            
            </div>
            {{ categoriesTree(0, 'menu_dropdown', null, activeCategoriesIds, true) }}
        </div>
