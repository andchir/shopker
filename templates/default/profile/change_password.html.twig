{% extends 'profile/profile.html.twig' %}

{% form_theme form 'form/bootstrap_5_horizontal_layout.html.twig' %}

{% block content %}

    <h4>{{ 'Change password' | trans }}</h4>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-wide rounded-pill" name="button-submit">
            {{ 'Submit' | trans }}
        </button>
    </div>
    {{ form_end(form) }}

{% endblock %}
