{% extends 'base.html.twig' %}

{% block body %}
    
    <main role="main" class="container">
        <div class="float-end mt-3">
            {{ app.user.email }}
        </div>
        <h1>{{ 'Profile' | trans }}</h1>

        {% include 'flash_messages.html.twig' %}

        <div class="min-height400">

            <div class="row">
                <div class="col-md-4">
                    <div class="list-group mb-3" id="list-tab" role="tablist">
                        <a class="list-group-item list-group-item-action{% if 'profile_history_orders' in app.request.attributes.get('_route') %} active{% endif %}" href="{{ pathLocalized('profile_history_orders') }}">
                            {{ 'History of orders' | trans }}
                        </a>
                        <a class="list-group-item list-group-item-action{% if 'profile_contacts' in app.request.attributes.get('_route') %} active{% endif %}" href="{{ pathLocalized('profile_contacts') }}">
                            {{ 'Contact details' | trans }}
                        </a>
                        <a class="list-group-item list-group-item-action{% if 'timezone' in app.request.attributes.get('_route') %} active{% endif %}" href="{{ pathLocalized('profile_timezone') }}">
                            {{ 'Timezone' | trans }}
                        </a>
                        <a class="list-group-item list-group-item-action{% if 'profile_change_password' in app.request.attributes.get('_route') %} active{% endif %}" href="{{ pathLocalized('profile_change_password') }}">
                            {{ 'Change password' | trans }}
                        </a>
                    </div>
                </div>
                <div class="col-md-8">

                    {% block content %}{% endblock %}

                </div>
            </div>

        </div>
    </main>

{% endblock %}
